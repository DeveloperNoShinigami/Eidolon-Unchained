{
  "id": "eidolonunchained:light_deity",
  "name": "Lumina, Sacred Guardian",
  "description": "Divine protector of the innocent and bringer of light",
  "colors": {
    "red": 255,
    "green": 230,
    "blue": 117
  },
  "progression": {
    "max_reputation": 100,
    "stages": [
      {
        "id": "light_initiate",
        "reputation": 0,
        "major": false,
        "title": "Light Initiate",
        "description": "A soul touched by divine radiance",
        "rewards": [
          "command:give {player} minecraft:golden_apple 1",
          "command:effect give {player} minecraft:regeneration 300 0",
          "command:title {player} subtitle {\"text\":\"The light embraces you...\",\"color\":\"yellow\"}",
          "command:playsound minecraft:block.beacon.ambient master {player} ~ ~ ~ 0.3 1.2"
        ]
      },
      {
        "id": "light_acolyte",
        "reputation": 25,
        "major": false,
        "title": "Light Acolyte",
        "description": "Faithful servant of the sacred light",
        "rewards": [
          "command:give {player} eidolon:gold_inlay 3",
          "command:give {player} eidolon:holy_symbol 1",
          "command:effect give {player} minecraft:resistance 600 0",
          "command:effect give {player} minecraft:glowing 1200 0",
          "command:title {player} title {\"text\":\"Light Acolyte\",\"color\":\"yellow\"}",
          "command:playsound minecraft:block.beacon.power_select master {player} ~ ~ ~ 0.7 1.0"
        ]
      },
      {
        "id": "light_priest",
        "reputation": 50,
        "major": true,
        "title": "Priest of Light",
        "description": "Ordained minister of divine radiance",
        "rewards": [
          "command:give {player} eidolon:divine_shard 2",
          "command:give {player} eidolon:sanctum_compass 1",
          "command:give {player} minecraft:diamond 3",
          "command:effect give {player} minecraft:absorption 1800 1",
          "command:effect give {player} minecraft:glowing 2400 0",
          "command:title {player} title {\"text\":\"Priest of Light\",\"color\":\"gold\"}",
          "command:title {player} subtitle {\"text\":\"Divine ordination achieved\",\"color\":\"yellow\"}",
          "command:playsound minecraft:ui.toast.challenge_complete master {player} ~ ~ ~ 1.0 1.0",
          "command:say {player} has been ordained as a Priest of Light! The heavens shine upon them."
        ]
      },
      {
        "id": "light_high_priest",
        "reputation": 100,
        "major": true,
        "title": "High Priest of Light",
        "description": "Elevated servant of the divine radiance",
        "rewards": [
          "command:give {player} eidolon:celestial_staff 1",
          "command:give {player} eidolon:blessed_bone 5",
          "command:give {player} minecraft:totem_of_undying 1",
          "command:effect give {player} minecraft:health_boost 3600 2",
          "command:effect give {player} minecraft:glowing 3600 0",
          "command:effect give {player} minecraft:hero_of_the_village 6000 2",
          "command:title {player} title {\"text\":\"High Priest of Light\",\"color\":\"gold\"}",
          "command:title {player} subtitle {\"text\":\"Blessed by divine grace\",\"color\":\"white\"}",
          "command:playsound minecraft:entity.player.levelup master {player} ~ ~ ~ 1.0 1.5",
          "command:say The divine light blesses {player} as High Priest! Their radiance illuminates the land."
        ]
      },
      {
        "id": "light_champion",
        "reputation": 200,
        "major": true,
        "title": "Champion of Light",
        "description": "Ultimate warrior of divine radiance",
        "rewards": [
          "command:give {player} eidolon:radiant_blade 1",
          "command:give {player} eidolon:divine_armor 1",
          "command:give {player} eidolon:holy_grail 1",
          "command:give {player} minecraft:netherite_block 3",
          "command:effect give {player} minecraft:health_boost 7200 4",
          "command:effect give {player} minecraft:strength 7200 2",
          "command:effect give {player} minecraft:resistance 7200 2",
          "command:effect give {player} minecraft:glowing 7200 0",
          "command:effect give {player} minecraft:hero_of_the_village 12000 3",
          "command:title {player} title {\"text\":\"Champion of Light\",\"color\":\"gold\",\"bold\":true}",
          "command:title {player} subtitle {\"text\":\"Divine champion ascendant\",\"color\":\"yellow\"}",
          "command:playsound minecraft:ui.toast.challenge_complete master @a ~ ~ ~ 2.0 1.2",
          "command:say BEHOLD! {player} has ascended as Champion of Light! The divine radiance flows through them!"
        ]
      }
    ]
  },
  "prayer_types": ["conversation", "blessing", "knowledge", "balance"]
}
