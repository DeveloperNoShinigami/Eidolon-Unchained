{
  "id": "eidolonunchained:dark_deity",
  "name": "Nyxathel, Shadow Lord",
  "description": "Master of shadows and forbidden knowledge",
  "colors": {
    "red": 123,
    "green": 85,
    "blue": 140
  },
  "progression": {
    "max_reputation": 100,
    "stages": [
      {
        "id": "shadow_initiate",
        "reputation": 0,
        "major": false,
        "title": "Shadow Initiate",
        "description": "A new soul embraced by the shadows",
        "rewards": [
          "command:give {player} eidolon:soul_shard 3",
          "command:title {player} subtitle {\"text\":\"The shadows welcome you...\",\"color\":\"dark_purple\"}",
          "command:playsound minecraft:ambient.soul_sand_valley.mood master {player} ~ ~ ~ 0.5 0.8"
        ]
      },
      {
        "id": "dark_acolyte",
        "reputation": 25,
        "major": false,
        "title": "Dark Acolyte",
        "description": "Proven servant of the shadow realm",
        "rewards": [
          "command:give {player} eidolon:death_essence 2",
          "command:give {player} eidolon:unholy_symbol 1",
          "command:effect give {player} minecraft:night_vision 1200 0",
          "command:title {player} title {\"text\":\"Dark Acolyte\",\"color\":\"dark_purple\"}",
          "command:playsound minecraft:block.beacon.power_select master {player} ~ ~ ~ 0.7 0.6"
        ]
      },
      {
        "id": "shadow_priest",
        "reputation": 50,
        "major": true,
        "title": "Shadow Priest",
        "description": "Bearer of forbidden knowledge and dark mysteries",
        "rewards": [
          "command:give {player} eidolon:warped_sprouts 5",
          "command:give {player} eidolon:zombie_heart 1",
          "command:give {player} eidolon:lesser_soul_gem 1",
          "command:effect give {player} minecraft:resistance 2400 0",
          "command:effect give {player} minecraft:strength 1200 0",
          "command:title {player} title {\"text\":\"Shadow Priest\",\"color\":\"dark_purple\",\"bold\":true}",
          "command:title {player} subtitle {\"text\":\"Bearer of Forbidden Knowledge\",\"color\":\"gray\"}",
          "command:playsound minecraft:block.beacon.activate master {player} ~ ~ ~ 1.0 0.8"
        ]
      },
      {
        "id": "void_master",
        "reputation": 75,
        "major": true,
        "title": "Void Master",
        "description": "Master of the void between life and death",
        "rewards": [
          "command:give {player} eidolon:greater_soul_gem 1",
          "command:give {player} eidolon:tattered_cloth 3",
          "command:give {player} eidolon:arcane_gold_ingot 2",
          "command:effect give {player} minecraft:resistance 3600 1",
          "command:effect give {player} minecraft:fire_resistance 3600 0",
          "command:effect give {player} minecraft:water_breathing 3600 0",
          "command:title {player} title {\"text\":\"Void Master\",\"color\":\"dark_purple\",\"bold\":true}",
          "command:title {player} subtitle {\"text\":\"Master of Life and Death\",\"color\":\"red\"}",
          "command:playsound minecraft:entity.wither.spawn master {player} ~ ~ ~ 0.5 1.2",
          "command:tellraw @a {\"text\":\"The void acknowledges {player} as a Void Master!\",\"color\":\"dark_purple\"}"
        ]
      },
      {
        "id": "shadow_champion",
        "reputation": 100,
        "major": true,
        "title": "Shadow Champion",
        "description": "Ultimate champion of Nyxathel's dark dominion",
        "rewards": [
          "command:give {player} eidolon:shadow_gem 1",
          "command:give {player} eidolon:death_essence 5",
          "command:give {player} eidolon:arcane_gold_ingot 3",
          "command:give {player} minecraft:enchanted_golden_apple 2",
          "command:effect give {player} minecraft:resistance 7200 2",
          "command:effect give {player} minecraft:strength 7200 1",
          "command:effect give {player} minecraft:speed 7200 1",
          "command:title {player} title {\"text\":\"SHADOW CHAMPION\",\"color\":\"dark_purple\",\"bold\":true,\"underlined\":true}",
          "command:title {player} subtitle {\"text\":\"Ultimate Servant of {deity_name}\",\"color\":\"purple\"}",
          "command:playsound minecraft:ui.toast.challenge_complete master {player} ~ ~ ~ 1.0 0.5",
          "command:tellraw @a {\"text\":\"ðŸŒŸ {player} has become the Shadow Champion of Nyxathel! ðŸŒŸ\",\"color\":\"gold\",\"bold\":true}",
          "command:advancement grant {player} only minecraft:adventure/hero_of_the_village"
        ]
      }
    ]
  },
  "prayer_types": ["conversation", "blessing", "knowledge", "curse"]
}
